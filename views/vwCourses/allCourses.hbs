{{#section 'css'}}

{{/section}}

<!-- Main Container -->
<section class="blog_post">
  <div class="container">


<div class="row">
  <div class="center_column col-xs-12 col-sm-12" id="center_column">
    <div class="page-title">
      <h2>CÁC KHÓA HỌC HIỆN CÓ</h2>
    </div>
    <ul class="blog-posts">
      {{#each this.courses}}
      <li class="post-item wow fadeInUp">
        <article class="entry">
          <div class="row">
            <div class="col-sm-4">
              <div class="entry-thumb image-hover2"> <a href="/courses/{{_id}}">
                  <figure><img src="images/blog-img1.jpg" alt="Blog"></figure>
                </a> </div>
            </div>
            <div class="col-sm-8">
              <h3 class="entry-title"><a href="/courses/{{_id}}">{{name}}</a></h3>
              <div class="entry-meta-data">  <span class="date"><i class="fa fa-calendar"></i>&nbsp;
                  {{createdDay}}</span> </div>
              <div class="rating"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i
                  class="fa fa-star-o"></i> <i class="fa fa-star-o"></i>&nbsp; <span>(5 votes)</span></div>
              <div class="entry-excerpt">{{shortDesc}}</div>
              <div class="entry-more"> <a href="#" class="button"> Tiếp tục &nbsp; <i
                    class="fa fa-angle-double-right"></i></a> </div>
            </div>
          </div>
        </article>
      </li>
     
      {{/each}}
     
    </ul>
    <div class="sortPagiBar">
      <div class="pagination-area " style="visibility: visible;">
        <ul>
          <li><a class="active" href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
    
  </div>
</section>
<!-- Main Container End -->