{{#section 'js'}}
<script type="text/javascript">
    jQuery(document).ready(function () {
        $('.password-group').hide();
        console.log('a');
    });
    jQuery(document).ready(function () {
        $('#is_change_pass').click(function () {
            $('.password-group').toggle(500);
            // alert("fdf");
        })
    });

    function validate() {
        if ($('#is_change_pass').is(":checked")) {
            if ($('#old_password').val() == "" ||
                $('#new_password').val() == "" ||
                $('#re_new_password').val() !== $('#new_password').val()) {
                alert("Nhập lại Password")
                return false;
            }
        }

        return true;
    }
</script>
